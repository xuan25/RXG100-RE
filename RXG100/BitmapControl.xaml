<UserControl x:Class="RXG100.BitmapControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RXG100"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Image Source="{Binding BackgorundImageSource}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Image Source="{Binding CroppedImageSource}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
